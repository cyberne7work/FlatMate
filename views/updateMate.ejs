                  <label for="matesalary">Salary</label>
                  <input type="number" class="form-control" name="Mate[matesalary]" id="" placeholder="salary" value="<%=mate.matesalary%>" required>
                </div>
                <div class="form-group">
                 <label for="matesalary">Mobile</label>
                 <input type="number" class="form-control" name="Mate[matemobile]" id="" placeholder="Mobile" value="<%=mate.matemobile%>" required>
                </div>
                <div class="form-group">
                 <label for="matesalary">Job / Prep.</label>
                <input type="text" class="form-control" name="Mate[matejob]" id="" placeholder="Job / Prep." value="<%=mate.matejob%>"required>
                </div>
